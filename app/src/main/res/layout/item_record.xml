<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/cardView_record"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false">
        <View
            android:id="@+id/item_record_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/relative_record_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgView_record"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="20dp"
                    android:adjustViewBounds="true"
                    android:padding="10.3dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_pets_black_24dp" />

                <TextView
                    android:id="@+id/txtView_record_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="28dp"
                    android:textSize="22sp"
                    android:textColor="@color/colorBlack"
                    android:text="皮卡丘" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#90595858"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/txtView_record_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="领养时间："
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
            </RelativeLayout>

        </RelativeLayout>
    </View>

    </android.support.v7.widget.CardView>


</RelativeLayout>
