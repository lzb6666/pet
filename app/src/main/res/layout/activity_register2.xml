<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="20sp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:background="@drawable/edit_login"
            android:id="@+id/editText_password1_card_points"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="14"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColorHint="#CECECE"
            android:textSize="16sp"
            android:hint="请输入密码"/>

        <EditText
            android:background="@drawable/edit_login"
            android:id="@+id/editText_password2_card_points"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="14"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColorHint="#CECECE"
            android:textSize="16sp"
            android:hint="请再次输入密码"/>

    </LinearLayout>


    <Button
        android:layout_margin="5dp"
        android:background="@drawable/orange_button"
        android:layout_gravity="center"
        android:id="@+id/button_register_card_points"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="注册"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"/>

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content">
        <View
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="#508B8B8B"
            />
        <Button
            android:id="@+id/button_back_login_card_points"
            android:background="@null"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登 录"
            android:textColor="#8B8B8B"
            android:textSize="15sp"
            />
        <View
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="#508B8B8B"
            />
    </RelativeLayout>
</LinearLayout>